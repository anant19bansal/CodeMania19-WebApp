<link rel="stylesheet" href="/css/sign_in_up.css">
<div class="sign-box">

    <div class="sign-content">
        <div class = "sign-heading">Sign in</div>

        <div>
        <form action="/users/create-session" method = "POST">
            <div><input class="input-box" type="email" name="email" placeholder="Email" required></div>
            <div><input class="input-box" type="password" name="password" placeholder="Password" required></div>
            <div id="forgot-password"><a href="/reset-password/enter-email">forgot password?</a></div>
            <div><input class="form-submit-btn" type="submit" value = "Sign in"></div>
        </form>
        </div>

        <div class="or-line">
            <div class="or-horizontal-line"></div>
            <div class="or-text">OR</div>
            <div class="or-horizontal-line"></div>
        </div>

        <a href="/users/auth/google">
            <div class="sign-google">
                <div><img src="/images/google-logo.png"></div>
                <div>Sign in with Google</div>
            </div>
        </a>
    </div>
    
</div>
