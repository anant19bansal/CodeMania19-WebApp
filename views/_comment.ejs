<li id="comment-<%= comment._id %>">
    <p>
        <%= comment.content %><br>
        <small><%= comment.user.name %></small>
    <!-- </p> -->

        <small class="like-buttons-comment">
            <div><span class="likes-count"><%= comment.likes.length %></span><span>&nbsp;Likes</span></div>
            <% if(locals.user){ %>
                <% if(comment.likes.find(like => like.user==locals.user.id)) { %>
                    <a href="/likes/toggle/?id=<%= comment._id %>&type=Comment "><i class="fas fa-heart" style="color: red;"></i></a>    
                <% }else{ %>
                    <a href="/likes/toggle/?id=<%= comment._id %>&type=Comment "><i class="fas fa-heart" style="color: lightgrey;"></i></a>
                <% } %>
            <% } %>
        </small><br>    

        <% if((locals.user) && (locals.user.id == comment.user.id)){ %>
            <small>
                <a class="delete-comment-button" href="/comments/destroy/<%= comment.id%>">X</a>
            </small>    
        <% } %>
    </p>
</li>